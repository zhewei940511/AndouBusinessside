<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zskjprojectj.andoubusinessside.view.TopView
        android:id="@+id/alltopview"
        app:topview_left="@mipmap/back_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>

    <RelativeLayout
        android:layout_below="@id/alltopview"
        android:background="@color/colorNavy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">
        <ImageView
            android:id="@+id/touxiang"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_postbar_touxiang"
            android:layout_width="wrap_content"
            android:padding="@dimen/dp_15"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/touxiang"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="淘淘的特产小店"
                android:textSize="@dimen/dp_20"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingTop="@dimen/dp_10"
                android:text="工作状态"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:paddingTop="@dimen/dp_10"
                android:src="@mipmap/ic_plant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_alignParentRight="true"
            android:src="@mipmap/distributor_center_settings"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_170"
        android:layout_marginRight="@dimen/dp_20"
        android:elevation="@dimen/dp_4"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/shape_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="6"
                android:textColor="@color/colorNavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="今日订单"
                android:textColor="@color/colorGrayDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:background="@color/grey_2"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="6"
                android:textColor="@color/colorNavy"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"/>
            <TextView
                android:text="今日订单"
                android:textColor="@color/colorGrayDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:background="@color/grey_2"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:gravity=""
                android:text="6"
                android:textColor="@color/colorNavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="今日订单"
                android:textColor="@color/colorGrayDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>
</RelativeLayout>
