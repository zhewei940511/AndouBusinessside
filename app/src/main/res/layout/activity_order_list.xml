<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    tools:context=".activity.OrderListActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <View
            android:id="@+id/customActionBarBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5ED3AE" />

        <FrameLayout
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:paddingStart="15dp">

            <ImageView
                android:layout_width="8.5dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_back_01" />
        </FrameLayout>


        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="全部订单"
            android:textColor="#ffffffff"
            android:textSize="14sp" />
    </FrameLayout>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        app:tl_indicator_color="#5ED3AE"
        app:tl_indicator_corner_radius="1.5dp"
        app:tl_textBold="NONE"
        app:tl_indicator_height="3dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_textSelectColor="#5ED3AE"
        app:tl_textUnselectColor="#323232"
        app:tl_textsize="13sp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>