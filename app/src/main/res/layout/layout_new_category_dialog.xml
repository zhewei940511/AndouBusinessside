<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/sp_bg_dialog_04"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="52dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="新增分类"
        android:textColor="#ff303442"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="请填写菜品分类名称"
        android:textColor="#ff73757f"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/categoryNameEdt"
        tools:text="商家推荐"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sp_bg_dialog_05"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:textColor="#ff646464"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/sp_bg_dialog_06"
        android:gravity="center"
        android:text="保存"
        android:textColor="#ffffffff"
        android:textSize="13sp" />
</LinearLayout>