<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activity.NoticeListActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="65dp"
            android:paddingTop="20dp"
            android:paddingEnd="65dp">

            <LinearLayout
                android:id="@+id/hotelEntryBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@mipmap/bg_user_entry"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="23dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_hotel_01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="酒店商家中心"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/restaurantEntryBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="-10dp"
                android:layout_weight="1"
                android:background="@mipmap/bg_user_entry"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="23dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_restaurant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="饭店商家中心"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mallEntryBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="-10dp"
                android:layout_weight="1"
                android:background="@mipmap/bg_user_entry"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="23dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_mall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="商城商家中心"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/joinEntryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="15dp"
            android:paddingTop="31dp"
            android:paddingEnd="15dp"
            android:paddingBottom="20dp"
            android:text="入驻成为其他商家 >>"
            android:textColor="#5ED3AE" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/noMerchantsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="266dp"
            android:layout_height="259dp"
            android:src="@mipmap/ic_no_merchant" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:text="暂未成为商家"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/joinEntryBtn2"
            android:layout_width="230dp"
            android:layout_height="44dp"
            android:layout_marginTop="54dp"
            android:background="@drawable/sp_btn_02"
            android:gravity="center"
            android:text="申请成为商家"
            android:textColor="#ffffffff"
            android:textSize="14sp" />
    </LinearLayout>
</FrameLayout>
