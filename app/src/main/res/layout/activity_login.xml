<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="39dp"
        android:layout_height="50dp"
        android:paddingStart="15dp"
        android:paddingTop="20dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_back_black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="商家登录"
        android:textColor="#333333"
        android:textSize="19sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <EditText
            android:id="@+id/mobileEdt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/sp_edit_bg_02"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:paddingStart="43dp"
            android:text="点击登录直接测试"
            android:textColor="#b6b6b6"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_account" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <EditText
            android:id="@+id/passwordEdt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/sp_edit_bg_02"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingStart="43dp"
            android:text="点击登录直接测试"
            android:textColor="#b6b6b6"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_password" />
    </FrameLayout>

    <TextView
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/sp_bg_dialog_06"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ffffffff"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingTop="31dp"
            android:paddingEnd="15dp"
            android:paddingBottom="20dp"
            android:text="入驻成为商家 >>"
            android:textColor="#5ED3AE" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/ic_find_password_01" />

        <TextView
            android:id="@+id/findPasswordBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="9dp"
            android:paddingTop="31dp"
            android:paddingEnd="15dp"
            android:paddingBottom="20dp"
            android:text="忘记密码"
            android:textColor="#5ED3AE" />
    </LinearLayout>
</LinearLayout>